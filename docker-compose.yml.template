version: '3.8'

services:
  couchdb:
    image: couchdb
    container_name: traces-couchdb
    volumes:
      - ./couchdb/data:/opt/couchdb/data
      - ./couchdb/config:/opt/couchdb/etc/local.d/
    ports:
      - 5984:5984
    environment:
      - COUCHDB_USER=admin
      - COUCHDB_PASSWORD=password
  traces:
    depends_on:
      - couchdb
    image: traces
    container_name: traces
    ports:
      - 13128:8080
